{
  "manifest_version": 2,

  "name": "Embed buttons",
  "description": "Chrome Extension - Add Embed buttons links to popular webstes",
  "version": "1.0",

  "permissions": [
    "tabs",
    "contextMenus",
    "*://www.twitch.com/*",
    "*://go.twitch.com/*"
  ],

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "content_scripts": [
    {
      "matches": [
        "*://www.twitch.tv/*",
        "*://go.twitch.tv/*"
      ],
      "js": ["embedder.js"],
      "run_at": "document_end"
    }
  ]
}